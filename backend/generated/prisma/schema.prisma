generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // e.g.  "file:./dev.db"
}

model User {
  id         Int     @id @default(autoincrement())
  username   String  @unique
  email      String  @unique
  password   String
  first_name String?
  last_name  String?
  rules      Boolean @default(false)
  role       Role    @default(USER)

  tickets  Ticket[]
  comments Comment[]
}

model Ticket {
  id          Int      @id @default(autoincrement())
  user_id     Int
  description String
  status      Status   @default(OPEN)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  priority_id Int

  user     User      @relation(fields: [user_id], references: [id])
  priority Priority  @relation(fields: [priority_id], references: [id])
  comments Comment[] @relation("TicketComments")
}

model Priority {
  id      Int      @id @default(autoincrement())
  level   String   @unique // e.g., "Low", "Medium", "High", "Critical"
  tickets Ticket[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  message    String
  ticket_id  Int
  user_id    Int
  created_at DateTime @default(now())

  ticket Ticket @relation("TicketComments", fields: [ticket_id], references: [id])
  user   User   @relation(fields: [user_id], references: [id])
}

enum Status {
  OPEN
  IN_PROGRESS
  UNDER_REVIEW
  CLOSED
}

enum Role {
  ADMIN
  USER
}
